# Backend Environment for Railway

# App Config
# PORT -> Non impostarla su Deta Space: viene fornita automaticamente
CSV_FILE_PATH=./data/certificates.csv
BACKUP_PATH=./backups/
LOG_PATH=./logs/

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# Security
CORS_ORIGIN=*
HELMET_ENABLED=true

# Serial Generation
SERIAL_LENGTH=7
MAX_PROGRESSIVE=99999

# Blockchain Config (set via Railway Variables)
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology/
PRIVATE_KEY=
CHAIN_ID=80002
EXPLORER_BASE_URL=https://amoy.polygonscan.com/tx/

# Blockchain Gas
GAS_LIMIT_MULTIPLIER=1.2
MAX_GAS_PRICE=50000000000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=text/csv,application/csv

# Database
CSV_DELIMITER=;
CSV_ENCODING=utf8
USERS_CSV_PATH=./data/users.csv

# Backup
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP=true

# API
API_VERSION=v1
API_PREFIX=/api
API_TOKEN=change-me



